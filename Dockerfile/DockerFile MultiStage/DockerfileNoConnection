# ------------------ MySQLGenericFunction
FROM rust:1.59 as builder1

# 1. Create a new empty shell project
RUN USER=root cargo new --bin MySQLGenericFunction
WORKDIR ./MySQLGenericFunction

# 2. Copy our manifests
COPY ./MySQLGenericFunction/Cargo.toml ./Cargo.toml

# 3. Build only the dependencies to cache them
RUN cargo build --release
RUN rm src/*.rs

# 4. Build source code
COPY ./MySQLGenericFunction/src ./src
ADD . ./
RUN rm ./target/release/deps/MySQLGenericFunction*
RUN cargo build --release

