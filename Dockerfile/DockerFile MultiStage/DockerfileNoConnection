# ------------------ InvokerNoConnection
FROM rust:1.59 as builder4

# 1. Create a new empty shell project
RUN USER=root cargo new --bin InvokerNoConnection
WORKDIR ./InvokerNoConnection

# 2. Copy our manifests
COPY ./InvokerNoConnection/Cargo.toml ./Cargo.toml

# 3. Build only the dependencies to cache them
RUN cargo build --release
RUN rm src/*.rs

# 4. Build source code
COPY ./InvokerNoConnection/src ./src

ADD . ./

RUN rm ./target/release/deps/InvokerNoConnection*
RUN cargo build --release

# ------------------ debian
FROM debian:bookworm-slim
ARG APP=/usr/src/app

RUN apt-get update
RUN apt-get install -y ca-certificates tzdata
RUN rm -rf /var/lib/apt/lists/*

ENV TZ=Etc/UTC \
    APP_USER=appuser

RUN groupadd $APP_USER \
    && useradd -g $APP_USER $APP_USER \
    && mkdir -p ${APP}

COPY --from=builder1 /MySQLGenericFunction/target/release/MySQLGenericFunction ${APP}/
COPY --from=builder2 /MongoGenericFunction/target/release/MongoGenericFunction ${APP}/
COPY --from=builder3 /CouchFunction/target/release/CouchFunction ${APP}/
COPY --from=builder4 /InvokerNoConnection/target/release/InvokerNoConnection ${APP}/

RUN chown -R $APP_USER:$APP_USER ${APP}

USER $APP_USER
WORKDIR ${APP}

CMD ["./InvokerNoConnection"]
